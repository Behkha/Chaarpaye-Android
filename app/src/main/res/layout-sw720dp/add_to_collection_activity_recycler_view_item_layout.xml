<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/add_to_collection_dialog_recycler_view_item_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:cropToPadding="true"
        android:src="@drawable/temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_to_collection_dialog_recycler_view_item_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textDirection="inherit"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/add_to_collection_dialog_recycler_view_item_bookmark_count"
        app:layout_constraintLeft_toRightOf="@+id/add_to_collection_dialog_recycler_view_item_bookmark_icon"
        app:layout_constraintRight_toLeftOf="@+id/add_to_collection_dialog_recycler_view_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_to_collection_dialog_recycler_view_item_bookmark_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textDirection="inherit"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/add_to_collection_dialog_recycler_view_item_image" />

    <ImageView
        android:id="@+id/add_to_collection_dialog_recycler_view_item_bookmark_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_add_circle_outline_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>